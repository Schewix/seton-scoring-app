# Sanity CMS
SANITY_PROJECT_ID=your_project_id
SANITY_DATASET=production
SANITY_API_VERSION=2024-06-01

# Frontend (Vite) Sanity values
VITE_SANITY_PROJECT_ID=your_project_id
VITE_SANITY_DATASET=production
VITE_SANITY_API_VERSION=2024-06-01

# Google Drive API (service account)
GOOGLE_SERVICE_ACCOUNT_EMAIL=service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
GOOGLE_DRIVE_ROOT_FOLDER_ID=your_google_drive_root_folder_id
# Optional allowlist (comma- or newline-separated, matched by substring, case/diacritics-insensitive)
GOOGLE_DRIVE_ALBUM_NAME_ALLOWLIST="setonuv zavod, draci smycka"

# Pionyr.cz API (articles feed)
PIONYR_API_TOKEN=your_pionyr_api_token
PIONYR_API_BASE_URL=https://pionyr.cz/api/
# Optional overrides for API paths and paging
PIONYR_API_ARTICLES_PATH=articles
PIONYR_API_ARTICLE_PATH=article
PIONYR_API_PAGE_PARAM=page
# Optional allowlist (comma- or newline-separated, matched by substring, case/diacritics-insensitive)
PIONYR_ARTICLE_FILTER="setonuv zavod, draci smycka"

# Supabase (server-side content storage)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Local editor (/redakce)
CONTENT_ADMIN_PASSWORD=change-me
CONTENT_JWT_SECRET=change-me-to-a-long-random-string
CONTENT_SESSION_TTL_DAYS=30
CONTENT_COOKIE_DOMAIN=.zelenaliga.cz
